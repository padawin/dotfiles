#!/bin/sh
set -e

checkGit="$1"
if [ ! -z "$checkGit" ]; then
	git status > /dev/null 2>&1 || exit
fi

PATH="/usr/local/bin:$PATH"
dir="`git rev-parse --git-dir`"
trap 'rm -f "$dir/$$.tags"' EXIT
git ls-files | \
	ctags --tag-relative -L - -f"$dir/$$.tags" \
	--languages=python,php,c,c++,go
mv "$dir/$$.tags" "$dir/tags"
