[module/date]
type = internal/date
interval = 1
date = %Y-%m-%d
time = %H:%M:%S
format-prefix ="  "
format-prefix-foreground = ${colors.prefix-foreground}
format-prefix-background = ${colors.prefix-background}
label = " %date% %time% "
label-foreground = ${colors.foreground}
label-background = ${colors.background}

[module/light]
type = custom/text
scroll-up = light -A 5
scroll-down = light -U 5
content = ""
content-foreground = ${colors.foreground}
content-background = ${colors.color3}
content-padding = 1

[module/wlan]
type = internal/network
interface = wlp9s0
interval = 5.0
format-connected = <label-connected>
label-connected = "%essid%"
format-connected-prefix = "  "
format-connected-prefix-foreground = ${colors.prefix-foreground}
format-connected-prefix-background = ${colors.prefix-background}
label-connected-padding = 1
label-connected-foreground = ${colors.foreground}
label-connected-background = ${colors.background}
format-disconnected = <label-disconnected>
format-disconnected-prefix = "  "
format-disconnected-prefix-foreground = ${colors.prefix-foreground}
format-disconnected-prefix-background = ${colors.prefix-background}
label-disconnected = "disconnected"
label-disconnected-foreground = ${colors.foreground}
label-disconnected-background = ${colors.background}
label-disconnected-padding = 1

[module/filesystem]
type = internal/fs
mount-0 = /
interval = 10
fixed-values = true
spacing = 0
format-mounted-prefix = "  "
format-mounted-prefix-foreground = ${colors.prefix-foreground}
format-mounted-prefix-background = ${colors.prefix-background}
format-mounted = <label-mounted>
label-mounted = " %mountpoint% %free% "
label-mounted-foreground = ${colors.foreground}
label-mounted-background = ${colors.background}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.prefix-foreground}
format-prefix-background = ${colors.prefix-background}
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label = "%percentage:2%%"
label-padding = 1

[module/mem]
type = custom/script
exec = ~/.scripts/memory | head -n 1
format = "<label>"
format-prefix = "  "
format-prefix-foreground = ${colors.prefix-foreground}
format-prefix-background = ${colors.prefix-background}
format-foreground = ${colors.foreground}
format-background = ${colors.background}
label-padding = 1

